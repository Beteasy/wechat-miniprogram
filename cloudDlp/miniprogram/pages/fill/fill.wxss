/* pages/fill/fill.wxss */

.fillContainer {
  display: flex;
  flex-direction: column;
  position: fixed;
  height: 100%;
  width: 100%;
}

.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 20rpx;
  margin-top: 30rpx;
  border: 1px solid #f0f0f0;
  background-color: #fff;
  /* text-align: right;
  width: 510rpx;
  overflow: hidden;
  color: #b2b2b2;
  height: 44rpx; */
}

.arrow-r {
  width: 9rpx;
  height: 17rpx;
  margin-left: 10rpx;
}

.titleInput {
  text-align: right;
  width: 510rpx;
  overflow: hidden;
  color: #b2b2b2;
  height: 44rpx;
}

.content {
  margin-top: 25rpx;
  padding: 0 20rpx;
  border: 1px solid #f0f0f0;
  background-color: #fff;
}

.imageModel {
  margin-top: 25rpx;
  padding: 0 20rpx;
  border: 1px solid #f0f0f0;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.uploadImage {
  width: 175rpx;
  height: 175rpx;
}

.image {
  width: 175rpx;
  height: 175rpx;
}

.submitModel {
  width: 100%;
  height: 20%;
  position: absolute;
  bottom: 0rpx;
  justify-content: center;
  background-color: #fff;
  margin-top: 30rpx;
}

.submitButton {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 16px;
  border: 0 none;
  background: #118fff;
  color: #fff;
  margin: 30rpx auto;
  border-radius: 50px;
}
