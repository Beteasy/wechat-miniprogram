/* pages/myPage/myNews/myNewsDetail/myNewsDetail.wxss */

.lostAndFoundDetailContainer {
  display: flex;
  flex-direction: column;
  position: fixed;
  width: 100%;
  height: 100%;
}

.newsImage {
  width: 100%;
}

.userInfo {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.userHead {
  height: 66rpx;
  width: 66rpx;
  line-height: 66rpx;
  border-radius: 50%;
  vertical-align: middle;
}


.userName{
  margin-left: 20rpx;
  font-size: 30rpx;
  vertical-align: middle;
}

.constText{
  font-size: 24rpx;
  margin-left: 20rpx;
}

.publishDate{
  margin-left: 20rpx;
  vertical-align: middle;
   margin-bottom: 5px;
  font-size: 26rpx;
}

.newsTitle{
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  margin-left: 40rpx;
  letter-spacing: 2rpx;
}

.newsContent{
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 44rpx;
  letter-spacing: 2rpx;
  font-size: 24rpx;
} 

.deleteButton::after{
  border-radius: 0rpx;
}

.deleteButton{
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  border-radius: 0rpx;
}